@model Vehicle

<h1>Create Vehicle</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="VIN"></label>
        <input asp-for="VIN" class="form-control" />
        <span asp-validation-for="VIN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentMileage"></label>
        <input asp-for="CurrentMileage" class="form-control" />
        <span asp-validation-for="CurrentMileage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentFuelLevel"></label>
        <select asp-for="CurrentFuelLevel" class="form-control">
            <option value="">Select Fuel Level</option>
            <option value="Empty">Empty</option>
            <option value="Quarter">Quarter</option>
            <option value="Half">Half</option>
            <option value="ThreeQuarter">ThreeQuarter</option>
            <option value="Full">Full</option>
        </select>
        <span asp-validation-for="CurrentFuelLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentCondition"></label>
        <select asp-for="CurrentCondition" class="form-control">
            <option value="">Select Condition</option>
            <option value="Poor">Poor</option>
            <option value="Fair">Fair</option>
            <option value="Good">Good</option>
            <option value="Excellent">Excellent</option>
        </select>
        <span asp-validation-for="CurrentCondition" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
