@model Store

@{
    ViewData["Title"] = "Delete Store";
}

<h1>Delete Store</h1>
<h3>Are you sure you want to delete this store?</h3>

<div>
    <h4>Store Details</h4>
    <dl class="dl-horizontal">
        <dt>Store ID</dt>
        <dd>@Model.StoreID</dd>
        <dt>Location</dt>
        <dd>@Model.Location</dd>
        <!-- Display store hours if needed -->
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.StoreID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Stores</a>
    </form>
</div>
